{
  "openapi": "3.0.3",
  "info": {
    "title": "Weather Analytics Public API",
    "version": "1.0.0",
    "description": "Read-only endpoints for coverage, station lookup and aggregate weather reports. All requests must include the `X-API-Key` header."
  },
  "servers": [
    { "url": "/api" }
  ],
  "paths": {
    "/data/coverage": {
      "get": {
        "summary": "Get available date coverage",
        "security": [{ "ApiKeyAuth": [] }],
        "responses": {
          "200": {
            "description": "Coverage bounds",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/CoverageResponse" }
              }
            }
          },
          "401": { "$ref": "#/components/responses/UnauthorizedError" },
          "404": { "$ref": "#/components/responses/NotFoundError" }
        }
      }
    },
    "/stations/nearest": {
      "get": {
        "summary": "Find the nearest station",
        "security": [{ "ApiKeyAuth": [] }],
        "parameters": [
          { "$ref": "#/components/parameters/LatitudeParam" },
          { "$ref": "#/components/parameters/LongitudeParam" }
        ],
        "responses": {
          "200": {
            "description": "Nearest station",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/NearestStationResponse" }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequestError" },
          "401": { "$ref": "#/components/responses/UnauthorizedError" },
          "404": { "$ref": "#/components/responses/NotFoundError" }
        }
      }
    },
    "/stations_in_radius": {
      "get": {
        "summary": "List stations inside a radius",
        "security": [{ "ApiKeyAuth": [] }],
        "parameters": [
          { "$ref": "#/components/parameters/LatitudeParam" },
          { "$ref": "#/components/parameters/LongitudeParam" },
          {
            "name": "radius",
            "in": "query",
            "required": false,
            "schema": { "type": "number", "format": "float", "default": 10.0, "minimum": 0.5 },
            "description": "Radius in kilometers"
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": { "type": "integer", "default": 40, "minimum": 1, "maximum": 200 },
            "description": "Maximum number of stations"
          }
        ],
        "responses": {
          "200": {
            "description": "Stations within radius",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/StationsInRadiusResponse" }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequestError" },
          "401": { "$ref": "#/components/responses/UnauthorizedError" }
        }
      }
    },
    "/reports/aggregate": {
      "post": {
        "summary": "Generate aggregated report",
        "security": [{ "ApiKeyAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AggregateReportRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Aggregated report data",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AggregateReportResponse" }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequestError" },
          "401": { "$ref": "#/components/responses/UnauthorizedError" },
          "404": { "$ref": "#/components/responses/NotFoundError" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "name": "X-API-Key",
        "in": "header"
      }
    },
    "parameters": {
      "LatitudeParam": {
        "name": "lat",
        "in": "query",
        "required": true,
        "schema": { "type": "number", "format": "float" },
        "description": "Latitude in decimal degrees"
      },
      "LongitudeParam": {
        "name": "lon",
        "in": "query",
        "required": true,
        "schema": { "type": "number", "format": "float" },
        "description": "Longitude in decimal degrees"
      }
    },
    "responses": {
      "BadRequestError": {
        "description": "Invalid input",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/ErrorResponse" }
          }
        }
      },
      "UnauthorizedError": {
        "description": "Missing or invalid API key",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/ErrorResponse" }
          }
        }
      },
      "NotFoundError": {
        "description": "Resource not found",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/ErrorResponse" }
          }
        }
      }
    },
    "schemas": {
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "ok": { "type": "boolean", "example": false },
          "error": { "type": "string", "example": "invalid_api_key" }
        }
      },
      "CoverageResponse": {
        "type": "object",
        "properties": {
          "ok": { "type": "boolean", "example": true },
          "min_date": { "type": "string", "format": "date" },
          "max_date": { "type": "string", "format": "date" }
        }
      },
      "Station": {
        "type": "object",
        "properties": {
          "station_id": { "type": "integer" },
          "name": { "type": "string" },
          "state": { "type": "string" },
          "latitude": { "type": "number", "format": "float" },
          "longitude": { "type": "number", "format": "float" },
          "distance_km": { "type": "number", "format": "float" }
        }
      },
      "NearestStationResponse": {
        "type": "object",
        "properties": {
          "ok": { "type": "boolean", "example": true },
          "station": { "$ref": "#/components/schemas/Station" }
        }
      },
      "StationsInRadiusResponse": {
        "type": "object",
        "properties": {
          "ok": { "type": "boolean", "example": true },
          "stations": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Station" }
          }
        }
      },
      "AggregateReportRequest": {
        "type": "object",
        "required": ["lat", "lon", "radius", "start_date", "end_date", "granularity"],
        "properties": {
          "lat": { "type": "number", "format": "float" },
          "lon": { "type": "number", "format": "float" },
          "radius": { "type": "number", "format": "float", "default": 10.0 },
          "start_date": { "type": "string", "format": "date" },
          "end_date": { "type": "string", "format": "date" },
          "granularity": { "type": "string", "enum": ["day", "month", "year"], "default": "day" }
        }
      },
      "ReportParams": {
        "type": "object",
        "properties": {
          "lat": { "type": "number", "format": "float" },
          "lon": { "type": "number", "format": "float" },
          "radius": { "type": "number", "format": "float" },
          "start_date": { "type": "string", "format": "date" },
          "end_date": { "type": "string", "format": "date" },
          "granularity": { "type": "string" }
        }
      },
      "ReportCoverage": {
        "type": "object",
        "properties": {
          "min_date": { "type": "string", "format": "date" },
          "max_date": { "type": "string", "format": "date" }
        }
      },
      "ReportPeriod": {
        "type": "object",
        "properties": {
          "period": { "type": "string" },
          "temp_avg": { "type": "number", "format": "float", "nullable": true },
          "temp_max": { "type": "number", "format": "float", "nullable": true },
          "temp_min": { "type": "number", "format": "float", "nullable": true },
          "precipitation": { "type": "number", "format": "float", "nullable": true },
          "sunshine": { "type": "number", "format": "float", "nullable": true },
          "sample_count": { "type": "integer" },
          "distinct_days": { "type": "integer" }
        }
      },
      "AggregateReportResponse": {
        "type": "object",
        "properties": {
          "ok": { "type": "boolean", "example": true },
          "params": { "$ref": "#/components/schemas/ReportParams" },
          "coverage": { "$ref": "#/components/schemas/ReportCoverage" },
          "stations": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Station" }
          },
          "periods": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/ReportPeriod" }
          },
          "granularity": { "type": "string" },
          "used_station_ids": {
            "type": "array",
            "items": { "type": "integer" }
          },
          "used_station_count": { "type": "integer" }
        }
      }
    }
  }
}
